@model IEnumerable<Parking.Models.ParkingSpot>

<div class="text-center">
    <h1 class="display-4">Vagas registradas</h1>
    
</div>

 <a asp-action="Register" asp-controller="ParkingSpots" class="btn btn-success mb-3">Registrar Nova Vaga</a>


<table class="table table-striped text-end">
    <thead>
        <tr>
            <th>Número</th>
            <th>Tipo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var spot in Model)
        {
            <tr>
                <td>@spot.SpotNumber</td>
                <td>@spot.Type</td>
                <td>
                  x
                    <a asp-action="Edit" asp-controller="ParkingSpots" asp-route-id="@spot.Id" class="btn btn-primary">Editar</a>

              
                    <a asp-action="Details" asp-controller="ParkingSpots" asp-route-id="@spot.Id" class="btn btn-info">Detalhes</a>

                    <a asp-action="Delete" asp-controller="ParkingSpots" asp-route-id="@spot.Id" class="btn btn-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
 