@model Estacionamento.Models.VagaEstacionamento

@{
    ViewData["Title"] = "Detalhes da Vaga";
}

<h1>Detalhes da Vaga #@Model.NumeroVaga</h1>

<table class="table">
    <tr>
        <th>Tipo</th>
        <td>@Model.Tipo</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>@(Model.Status ? "Ocupada" : "Disponível")</td>
    </tr>
    <tr>
        <th>Ocupação</th>
        <td>@Model.Ocupacao</td>
    </tr>
    <tr>
        <th>Liberação</th>
        <td>@Model.Liberacao</td>
    </tr>
</table>

<a href="@Url.Action("Index", "Vagas")" class="btn btn-secondary">Voltar</a>
