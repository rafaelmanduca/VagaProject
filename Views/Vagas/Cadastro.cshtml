@model Estacionamento.Models.VagaEstacionamento

<h1>Cadastro de Vaga</h1>

<form asp-action="Cadastro" method="post">
    <div class="form-group">
        <label>Número da Vaga</label>
        <select asp-for="NumeroVaga" class="form-control">
            @foreach (var numero in ViewBag.NumerosDisponiveis)
            {
                <option value="@numero">@numero</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Tipo de Vaga</label>
        <select asp-for="Tipo" class="form-control">
            <option value="Idoso">Idoso</option>
            <option value="Cadeirante">Cadeirante</option>
            <option value="Comum">Comum</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>
