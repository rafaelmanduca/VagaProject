@using Estacionamento.Models
@model VagaEstacionamento

@{
    ViewData["Title"] = "Cadastro de Vaga";
}

<div class="text-center">
    <h1 class="display-4">Cadastro da Vaga #@Model.NumeroVaga</h1>
</div>

<div class="container mt-5">
    <form asp-action="Index">
        <div class="form-group">
            <label for="Tipo">Tipo de Veículo</label>
            <input type="text" class="form-control" id="Tipo" value="@Model.Tipo" />
        </div>
        <div class="form-group">
            <label for="Status">Status</label>
            <input type="checkbox" class="form-check-input" id="Status" @if (Model.Status)
            {
                <text>checked</text>
            } />
        </div>
        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </form>
</div>

