@model Estacionamento.Models.VagaEstacionamento

@{
    ViewData["Title"] = "Editar Vaga #@Model.NumeroVaga";
}

<h1>Editar Vaga #@Model.NumeroVaga</h1>

<form asp-action="Edit" method="post">
    <div class="form-group mb-3">
        <label for="Tipo">Tipo de Vaga</label>
        <select asp-for="Tipo" class="form-control">
            <option value="Idoso">Idoso</option>
            <option value="Cadeirante">Cadeirante</option>
            <option value="Comum">Comum</option>
        </select>

    </div>

    <div class="form-group mb-3">
        <label for="Ocupacao">Data e Hora de Ocupação</label>
        <input type="datetime-local" class="form-control" asp-for="Ocupacao" />
    </div>

    <div class="form-group mb-3">
        <label for="Liberacao">Data e Hora de Liberação</label>
        <input type="datetime-local" class="form-control" asp-for="Liberacao" />
    </div>

    <div class="form-check mb-3">
        <input type="checkbox" class="form-check-input" asp-for="Status" />
        <label class="form-check-label" for="Status">Status (Ocupada)</label>
    </div>

    <button type="submit" class="btn btn-primary">Salvar alterações</button>
    <a href="@Url.Action("Index", "Vagas")" class="btn btn-secondary">Cancelar</a>
</form>
